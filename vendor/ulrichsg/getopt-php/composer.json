{
    "name": "ulrichsg/getopt-php",
    "type": "library",
    "description": "Command line arguments parser for PHP 5.3 - 7.1",
    "homepage": "http://ulrichsg.github.io/getopt-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Ulrich Schmidt-Goertz",
            "email": "ulrich@schmidt-goertz.de"
        },
        {
            "name": "Thomas Flori",
            "email": "thflori@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Ulrichsg\\Getopt\\": "src"
        }
    },
    "scripts": {
        "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 test"
    }
}
